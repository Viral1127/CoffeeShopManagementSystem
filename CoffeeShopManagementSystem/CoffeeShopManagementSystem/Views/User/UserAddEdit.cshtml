@model CoffeeShopManagementSystem.Models.UserModel;

<div class="main" id="main">
    <div class="container">

        <section class="section">
            <div class="row">
                <div class="col">

                    <div class="card">
                        @if (@TempData["UserInsert"] != null)
                        {
                            <div id="UserInsertAlert" class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
                                <h5 class="text-success text-center ">@TempData["UserInsert"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" area-label="close"></button>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">User</h5>

                            <!-- General Form Elements -->
                            <form id="userForm" asp-controller="User" asp-action="UserSave" method="post">
                                <div class="row mb-3">
                                    <label asp-for="UserName" class="col-sm-2 col-form-label">User Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="UserName" class="form-control">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Email" class="col-sm-2 col-form-label">Email </label>
                                    <div class="col-sm-10">
                                        <input type="email" asp-for="Email" class="form-control">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="Password" class="form-control">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="MobileNumber" class="col-sm-2 col-form-label">Mobile Number</label>
                                    <div class="col-sm-10">
                                        <input type="text" asp-for="MobileNumber" class="form-control">
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <label asp-for="Address" class="col-sm-2 col-form-label">Address</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" asp-for="Address" style="height: 100px"></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="row mt-5">
                                    <div class="col-12 text-center">
                                        <a asp-controller="User" asp-action="UserSave">
                                            <input type="hidden" name="UserID" value="@Model.UserID" />

                                            <button class="btn btn-primary" type="submit">Submit</button>
                                        </a>

                                        <button type="reset" class="btn btn-secondary">Reset</button>

                                        <a asp-controller="User" asp-action="UserList">
                                            <button type="button" class="btn btn-success">Back</button>

                                        </a>

                                    </div>
                                </div>

                            </form><!-- End General Form Elements -->

                        </div>
                    </div>

                </div>


            </div>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    // Function to hide alert and reset form
    function hideAlertAndResetForm(alertId, formId, duration) {
        setTimeout(function () {
            var alertElement = document.getElementById(alertId);
            var formElement = document.getElementById(formId);

            if (alertElement) {
                alertElement.classList.remove('show');
                alertElement.classList.remove('mt-3');// Hide the alert using Bootstrap's 'show' class
            }

            if (formElement) {
                formElement.reset(); // Reset the form fields
            }
        }, duration);
    }

    // Call the function to hide alert and reset form after 3 seconds if the alert exists
    document.addEventListener('DOMContentLoaded', function () {
        if (document.getElementById('UserInsertAlert')) {
            hideAlertAndResetForm('UserInsertAlert', 'userForm', 1000);
        }
    });
</script>